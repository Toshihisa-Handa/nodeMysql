<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>user list</title>
</head>
<body>
<h1>登録一覧画面</h1>

<a href="/create">新規登録画面へ</a>

<table>
     <tr>
        <th>名前</th>
        <th>email</th>
        <th>更新</th>
        <th>削除</th>
     </tr>
     <% users.forEach(function (value) { %>
     <tr>
         <td><%= value.name %></td>
         <td><%= value.email %></td>
         <td><a href="/edit/<%= value.id %>">更新</a></td>
         <td><a href="/delete/<%= value.id %>">削除</a></td>
     </tr>
     <% }); %>
</table>











</body>
</html>